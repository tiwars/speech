<nav class="navbar navbar-dark bg-dark">
  <h3 class="text-white">Speech to Text</h3>
</nav>
    <!-- Example row of columns -->
    <input type="file" accept="audio/*">




<textarea id="scribbedText" cols="150" rows="15"></textarea>
<button onclick="saveToDB()" id="saveText" disabled>Save</button>
<div class="row d-flex justify-content-center flex-fill mic_div">
    <div class="google-microphone" onclick="startTranscribing()">
        <div id="mic" class="shadow">
            <div class="gn">
                <div class="mc"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bd-example-modal-lg" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="width: 48px">
            <div class="spinner-border" role="status">
    <span class="sr-only">Loading...</span>
  </div>
        </div>
    </div>
</div>

  <input type="hidden" id="sessionId" value={{sessionId}}></input>
